{
  "manifest_version": 2,
  "name": "Udelity",
  "description": "Download Udemy Videos",
  "version": "0.0.1",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": ["activeTab", "storage", "tabs", "webRequest", "*://*.udemy.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.udemy.com/*"],
      "js": ["content_script.js"]
    },
    {
      "matches": [
        "*://*.udemy.com/*",
        "http://localhost:8080/",
        "http://localhost:3000/",
        "https://udelity-live.herokuapp.com/",
        "https://www.udelity.in/"
      ],
      "js": ["installed_notifier.js"],
      "run_at": "document_idle"
    }
  ]
}
